@model Keven.Model.TT_Kefu
@{
    ViewBag.Title = "客服详细";
    ViewBag.Sidebar = 120;

    //Dictionary<int, string> dicOrganization = ViewBag.Organization as Dictionary<int, string>;
    //Dictionary<int, string> dicPart = ViewBag.Part as Dictionary<int, string>;



}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            客服详细
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#"><i class="fa fa-dashboard"></i> 首页</a>
            </li>
            <li>
                <a href="#">系统设置</a>
            </li>
            <li class="active">
                用户信息
            </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">
                            客服信息
                        </h3>
                    </div><!-- /.box-header -->
                    @if (ViewBag.Success != null)
                    {
                        <div class="box-body">
                            <div class="alert @(ViewBag.Success ? "alert-success": "alert-error") alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4>
                                    <i class="icon fa @(ViewBag.Success ? "fa-check": "fa-close")"></i> 提示！
                                </h4>
                                @ViewBag.Message
                            </div>
                            @if (ViewBag.Success)
                            {
                                <script>setTimeout(function () { location.href = "@Url.Content("~/Config/KefuList")" }, 1500);</script>
                            }
                        </div>
                    }

                    <form action="~/Config/KefuEdit" method="post" class="form-horizontal">
                        <div class="box-body" style="display: block;">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <!--隐藏-->
                                        @Html.HiddenFor(t => t.Id)
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">用户姓名</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Name, new { @class = "form-control", @placeholder = "用户姓名" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">真实姓名</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.RealName, new { @class = "form-control", @placeholder = "真实姓名" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">照片</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Photo, new { @class = "form-control", @placeholder = "照片" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">QQ</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.QQ, new { @class = "form-control", @placeholder = "QQ" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">微信</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Weixin, new { @class = "form-control", @placeholder = "微信" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">微信二维码</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.WeixinUrl, new { @class = "form-control", @placeholder = "微信二维码" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">联系电话</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Tel, new { @class = "form-control", @placeholder = "联系电话" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">手机</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Mobile, new { @class = "form-control", @placeholder = "手机" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">邮箱</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Email, new { @class = "form-control", @placeholder = "邮箱" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">完成订单数</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.OrderNum, new { @class = "form-control", @placeholder = "完成订单数" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">工作年限</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.WorkYear, new { @class = "form-control", @placeholder = "工作年限" })
                                        </div>
                                    </div>

                                    <div class="box-footer">
                                        <div class="pull-right">
                                            <button type="submit" class="btn btn-primary">保存</button>
                                            <a class="btn btn-default" href="~/Config/KefuList">取消</a>
                                        </div>
                                    </div>

                                </div><!-- /.col -->
                            </div><!-- /.row -->
                        </div><!-- /.box-body -->
                    </form>
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>


