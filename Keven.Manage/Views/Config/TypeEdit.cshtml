@model Keven.Model.PD_TYPE
@{
    ViewBag.Title = "类型详细";
    ViewBag.Sidebar = 140;

    Dictionary<int, string> dicBaseType = ViewBag.BaseType as Dictionary<int, string>;
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            类型详细
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#"><i class="fa fa-dashboard"></i> 首页</a>
            </li>
            <li>
                <a href="#">系统设置</a>
            </li>
            <li class="active">
                基础类型
            </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">
                            类型详细
                        </h3>
                    </div><!-- /.box-header -->
                    @if (ViewBag.Success != null)
                    {
                        <div class="box-body">
                            <div class="alert @(ViewBag.Success ? "alert-success": "alert-error") alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4>
                                    <i class="icon fa @(ViewBag.Success ? "fa-check": "fa-close")"></i> 提示！
                                </h4>
                                @ViewBag.Message
                            </div>
                            @if (ViewBag.Success)
                            {
                                <script>setTimeout(function () { location.href = "@Url.Content("~/Config/TypeList")" }, 1500);</script>
                            }
                        </div>
                    }

                    <form action="~/Config/TypeEdit" method="post" class="form-horizontal">
                        <div class="box-body" style="display: block;">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <!--隐藏-->
                                        @Html.HiddenFor(t => t.Id)
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">所属分类</label>
                                        <div class="col-sm-10">
                                            <select name="TypeId" class="form-control">
                                                @foreach (var dic in dicBaseType)
                                                {
                                                    <option value="@dic.Key" @(Model != null ? Model.TypeId == dic.Key ? "selected" : "" : "")>@dic.Value</option>

                                                }
                                            </select>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">分类编号</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Tid, new { @class = "form-control", @placeholder = "分类编号" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">类别名称</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Name, new { @class = "form-control", @placeholder = "类别名称" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">描述备注</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Remark, new { @class = "form-control", @placeholder = "描述备注" })
                                        </div>
                                    </div>

                                    <div class="box-footer">
                                        <div class="pull-right">
                                            <button type="submit" class="btn btn-primary">保存</button>
                                            <a class="btn btn-default" href="~/Config/TypeList">取消</a>
                                        </div>
                                    </div>

                                </div><!-- /.col -->
                            </div><!-- /.row -->
                        </div><!-- /.box-body -->
                    </form>
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>


