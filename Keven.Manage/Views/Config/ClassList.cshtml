@model List<Keven.Model.TT_Trademark_Class>

@{
    ViewBag.Title = "商标分类管理";
    ViewBag.Sidebar = 110;

    int PageIndex = ViewBag.PageIndex;
    int PageCount = ViewBag.PageCount;
    int Total = ViewBag.Total;

    List<Keven.Model.TT_Trademark_Class> bigClass = ViewBag.BigClass as List<Keven.Model.TT_Trademark_Class>;

}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            分类管理
            @*<small>advanced tables</small>*@
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#"><i class="fa fa-dashboard"></i> 首页</a>
            </li>
            <li>
                <a href="#">基础信息</a>
            </li>
            <li class="active">列表</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">列表</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            <form action="~/Config/ClassList" method="post">
                                关键字：<input type="text" name="keyword" value="@ViewBag.Keyword" />
                                大类：<select class="select2" name="parent">
                                    <option value=""></option>                                    
                                    @for (int i = 0; i < Keven.Manage.Models.BaseModels.TrademarkClass.Length; i++)
                                    {
                                        <option @(ViewBag.tmCls == i ? "selected" : "") value="@i">@Keven.Manage.Models.BaseModels.TrademarkClass[i]</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary" name="btnSearch"><i class="fa fa-fw fa-search"></i> 查询</button>
                            </form>
                            @*<a class="btn pull-right btn-success" href="~/Config/AreaEdit"><i class="fa fa-fw fa-plus"></i> 新建</a>*@
                        </div>

                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th width="200px">分类</th>
                                    <th>描述</th>
                                    <th width="50px">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var t in bigClass)
                                {
                                    <tr>
                                        <td>第@(t.Class)类 @t.AliasName</td>
                                        <td>
                                            @t.ClassName
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        @*@if (Total > Model.Count)
                        {
                            <div style="text-align:right; width:initial">
                                @Html.PageBar("", "{page}", PageIndex, PageCount, Total)
                            </div>
                        }*@
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>

