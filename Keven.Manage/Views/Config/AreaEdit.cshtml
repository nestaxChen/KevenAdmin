@model Keven.Model.PD_Areas
@{
    ViewBag.Title = "区域管理";
    ViewBag.Sidebar = 100;

}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            资料详细
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#"><i class="fa fa-dashboard"></i> 首页</a>
            </li>
            <li>
                <a href="#">系统设置</a>
            </li>
            <li class="active">
                区域管理
            </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">
                            区域管理
                        </h3>
                    </div><!-- /.box-header -->
                    @if (ViewBag.Success != null)
                    {
                        <div class="box-body">
                            <div class="alert @(ViewBag.Success ? "alert-success": "alert-error") alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4>
                                    <i class="icon fa @(ViewBag.Success ? "fa-check": "fa-close")"></i> 提示！
                                </h4>
                                @ViewBag.Message
                            </div>
                            @if (ViewBag.Success)
                            {
                                <script>setTimeout(function () { location.href = "@Url.Content("~/Config/AreaList")" }, 1500);</script>
                            }
                        </div>
                    }

                    <form action="~/Config/AreaEdit" method="post" class="form-horizontal">
                        <div class="box-body" style="display: block;">
                            <div class="row">
                                <div class="col-md-12">                                    
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">机构名称</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Id, new { @class = "form-control", @placeholder = "机构名称" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">机构代码</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Name, new { @class = "form-control", @placeholder = "机构代码" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">上级机构</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Parent, new { @class = "form-control", @placeholder = "机构代码" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">负责人</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(t => t.Sort, new { @class = "form-control", @placeholder = "负责人" })
                                        </div>
                                    </div>
                                    <div class="box-footer">
                                        <div class="pull-right">
                                            <button type="submit" class="btn btn-primary">保存</button>
                                            <a class="btn btn-default" href="~/Config/AreaList">取消</a>
                                        </div>
                                    </div>
                                </div><!-- /.col -->
                            </div><!-- /.row -->
                        </div><!-- /.box-body -->
                    </form>
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>

